<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to right, #e0f7fa, #ffffff);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.messagingapplication.LoginController">

   <children>
      <!-- Centered Card -->
      <VBox alignment="CENTER" layoutX="450.0" layoutY="90.0" prefHeight="320.0" prefWidth="300.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 12, 0, 0, 4);">
         <padding>
            <Insets bottom="30" left="30" right="30" top="30" />
         </padding>

         <Label style="-fx-text-fill: #333;" text="Welcome Back!">
            <font>
               <Font name="Segoe UI Semibold" size="22" />
            </font>
         </Label>

         <TextField fx:id="usernameField" prefHeight="40.0" promptText="Username" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d0d0d0;">
            <font>
               <Font size="14" />
            </font>
         </TextField>

         <PasswordField fx:id="passwordField" prefHeight="40.0" promptText="Password" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d0d0d0;">
            <font>
               <Font size="14" />
            </font>
         </PasswordField>

         <Button onAction="#login" prefHeight="40" prefWidth="140" style="-fx-background-color: linear-gradient(to right, #00c6ff, #0072ff);                            -fx-background-radius: 20;                            -fx-text-fill: white;                            -fx-font-size: 14;" text="Login">
         </Button>

         <Hyperlink onAction="#moveToCreateAccount" style="-fx-text-fill: #0072ff; -fx-font-size: 13;" text="Create New Account">
         </Hyperlink>
      </VBox>

      <!-- App name on left -->
      <VBox alignment="CENTER" layoutX="80.0" layoutY="150.0" prefHeight="200.0" prefWidth="292.0" spacing="15.0">
         <Label style="-fx-text-fill: #0072ff;" text="Quick Chat">
            <font>
               <Font name="Segoe UI Bold" size="36" />
            </font>
         </Label>
         <Label style="-fx-text-fill: #555;" text="Simple LAN Messaging">
            <font>
               <Font name="Segoe UI" size="16" />
            </font>
         </Label>
      </VBox>

   </children>
</AnchorPane>
